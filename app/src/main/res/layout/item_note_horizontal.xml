<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="100dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/note_card_beige">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/noteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_dark"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="start"
                android:minHeight="36dp"
                tools:text="Meeting Notes" />

            <TextView
                android:id="@+id/noteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:gravity="start"
                tools:text="Apr 16" />
        </LinearLayout>

        <!-- Action Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="4dp">

            <!-- Pin Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/pinButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="0dp"
                android:padding="4dp"
                android:text="↑"
                android:textSize="16sp"
                android:textColor="@color/orange_primary"
                android:contentDescription="@string/pin_note" />

            <!-- Add Tag Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addTagButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:minWidth="0dp"
                android:padding="4dp"
                android:text="+"
                android:textSize="16sp"
                android:textColor="@color/orange_primary"
                android:contentDescription="@string/add_tag" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:minWidth="0dp"
                android:padding="4dp"
                android:text="×"
                android:textSize="18sp"
                android:textColor="@color/logout_red"
                android:contentDescription="@string/delete_note" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
