<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_beige">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="104dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Filter Notes"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_header" />

            <!-- Filter by Tags Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by Tags"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:chipSpacingHorizontal="8dp"
                app:singleSelection="false" />

            <TextView
                android:id="@+id/tv_no_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No tags available"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />


            <!-- Attachment Filters Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attachments"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_has_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has Photo"
                android:textColor="@color/text_dark"
                app:buttonTint="@color/accent_blue" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_has_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has Audio"
                android:textColor="@color/text_dark"
                app:buttonTint="@color/accent_blue" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_has_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Has Location/Geofence"
                android:textColor="@color/text_dark"
                android:layout_marginBottom="24dp"
                app:buttonTint="@color/accent_blue" />

            <!-- Last Edited Date Range -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last edited"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/orange_dark"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_date_from"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="From"
                    app:cornerRadius="12dp" />

                <View
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_date_to"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="To"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_date_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip: leave either blank to filter open-ended"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/card_background"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_filter"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Clear"
            android:textColor="@color/accent_blue"
            app:strokeColor="@color/accent_blue"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Apply Filter"
            android:textColor="@color/white"
            android:backgroundTint="@color/accent_blue"
            app:cornerRadius="12dp" />
    </LinearLayout>

</LinearLayout>

<!-- Bottom Navigation -->
<include layout="@layout/include_bottom_navigation" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
