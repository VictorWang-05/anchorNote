<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_add_location_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_dark"
        android:layout_marginBottom="16dp" />

    <!-- Address input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/et_location_address_layout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dialog_geofence_address"
        app:boxStrokeColor="@color/orange_primary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPostalAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Radius slider -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/dialog_geofence_radius"
        android:textSize="14sp"
        android:textColor="@color/text_dark" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_location_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:valueFrom="50"
        android:valueTo="1000"
        android:value="200"
        android:stepSize="50"
        app:thumbColor="@color/orange_primary"
        app:trackColorActive="@color/orange_primary"
        app:trackColorInactive="@color/separator_orange" />

    <TextView
        android:id="@+id/tv_location_radius_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 meters"
        android:textSize="12sp"
        android:textColor="@color/text_secondary" />
</LinearLayout>
