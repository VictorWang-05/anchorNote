<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_beige"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
        app:title="@string/drawing_title" />

    <com.example.anchornotes_team3.view.DrawingView
        android:id="@+id/drawing_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="80dp" />

    <!-- Bottom drawing tools menu -->
    <LinearLayout
        android:id="@+id/drawing_tools_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/note_card_beige"
        android:orientation="horizontal"
        android:elevation="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center">

        <!-- Pen Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pen"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/drawing_pen"
            app:icon="@android:drawable/ic_menu_edit"
            app:iconGravity="top"
            app:iconTint="@color/orange_primary"
            app:iconSize="28dp"
            android:textSize="12sp"
            android:textColor="@color/orange_primary"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- Eraser Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_eraser"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/drawing_eraser"
            app:icon="@drawable/ic_eraser"
            app:iconGravity="top"
            app:iconTint="@color/text_dark"
            app:iconSize="28dp"
            android:textSize="12sp"
            android:textColor="@color/text_dark"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- Color Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_color"
            style="@style/Widget.Material3.Button.TextButton.Icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/drawing_color"
            app:icon="@drawable/ic_color_circle"
            app:iconGravity="top"
            app:iconSize="28dp"
            android:textSize="12sp"
            android:textColor="@color/text_dark"
            android:minHeight="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

